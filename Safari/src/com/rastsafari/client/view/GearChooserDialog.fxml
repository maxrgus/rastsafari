<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane prefHeight="300.0" prefWidth="500.0" styleClass="background" stylesheets="@DarkTheme.css" xmlns="http://javafx.com/javafx/8.0.65" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.rastsafari.client.controller.GearChooserDialogController">
   <center>
      <TableView fx:id="gearTable" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
        <columns>
          <TableColumn fx:id="gidColumn" prefWidth="95.0" text="ID" />
          <TableColumn fx:id="gearNameColumn" prefWidth="154.0" text="Namn" />
            <TableColumn fx:id="gearDescriptionColumn" prefWidth="246.0" text="Beskrivning" />
        </columns>
      </TableView>
   </center>
   <bottom>
      <ButtonBar prefHeight="40.0" prefWidth="200.0" BorderPane.alignment="CENTER">
        <buttons>
          <Button defaultButton="true" mnemonicParsing="false" onAction="#handleOk" text="Ok" />
            <Button layoutX="418.0" layoutY="14.0" mnemonicParsing="false" onAction="#handleBackButton" text="Avbryt" />
        </buttons>
         <BorderPane.margin>
            <Insets bottom="3.0" right="15.0" />
         </BorderPane.margin>
      </ButtonBar>
   </bottom>
</BorderPane>
